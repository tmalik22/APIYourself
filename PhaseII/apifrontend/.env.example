# APIYourself Environment Configuration
# Copy this to .env.local and configure your settings

# =============================================================================
# LLM Security Configuration
# =============================================================================

# Enable OpenAI integration (set to "true" to enable)
VITE_OPENAI_ENABLED=false

# OpenAI API Key (only if VITE_OPENAI_ENABLED is true)
# VITE_OPENAI_API_KEY=your_openai_api_key_here

# Custom LLM API Key (for hosted LLM services)
# VITE_LLM_API_KEY=your_custom_llm_api_key_here

# =============================================================================
# Security Settings
# =============================================================================

# Maximum requests per user per hour (default: 100)
VITE_LLM_RATE_LIMIT_HOUR=100

# Maximum requests per user per minute (default: 10)
VITE_LLM_RATE_LIMIT_MINUTE=10

# Maximum burst requests (default: 5)
VITE_LLM_RATE_LIMIT_BURST=5

# Enable security logging (default: true)
VITE_SECURITY_LOGGING=true

# Security violation log level (LOW, MEDIUM, HIGH, CRITICAL)
VITE_SECURITY_LOG_LEVEL=MEDIUM

# =============================================================================
# Development Settings
# =============================================================================

# Default Ollama endpoint for development
VITE_DEFAULT_OLLAMA_ENDPOINT=http://localhost:11434

# Default model for Ollama
VITE_DEFAULT_OLLAMA_MODEL=llama3.2

# Enable debug mode for security guard
VITE_DEBUG_SECURITY=false

# =============================================================================
# Production Settings
# =============================================================================

# Sentry DSN for error monitoring (production)
# VITE_SENTRY_DSN=your_sentry_dsn_here

# Analytics tracking ID (production)
# VITE_ANALYTICS_ID=your_analytics_id_here

# =============================================================================
# API Builder Configuration
# =============================================================================

# Maximum models per project
VITE_MAX_MODELS_PER_PROJECT=50

# Maximum endpoints per project
VITE_MAX_ENDPOINTS_PER_PROJECT=100

# Maximum projects per user
VITE_MAX_PROJECTS_PER_USER=20

# Enable code generation features
VITE_ENABLE_CODE_GENERATION=true

# Enable production wizard
VITE_ENABLE_PRODUCTION_WIZARD=true
